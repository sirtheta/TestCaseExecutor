<Window x:Class="TestCaseExecutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TestCaseExecutor"
        xmlns:viewmodels="clr-namespace:TestCaseExecutor.ViewModels"
        xmlns:notifications="clr-namespace:Notifications.Wpf.Core.Controls;assembly=Notifications.Wpf.Core" 
        xmlns:helper="clr-namespace:TestCaseExecutor.Helpers"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="TestCaseExecutor" Height="850" Width="1024">
    <Window.Resources>
        <helper:ExpandButtonContentConverter x:Key="ExpandButtonContentConverter" />
    </Window.Resources>
    <Grid>
        <!--defines the area where to show the totification toast-->
        <notifications:NotificationArea Panel.ZIndex="10" 
              MaxItems="3"
              x:Name="WindowArea"
              Position="BottomRight" Margin="0,0,1,1">
        </notifications:NotificationArea>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"></ColumnDefinition>
                <ColumnDefinition Width="17*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <Button Content="{materialDesign:PackIcon Kind=OpenInApp,Size=30}"    
                        Command="{Binding BtnLoadCSVFile}" 
                        Margin="0,10,5,0" 
                        HorizontalAlignment="Right" 
                        FontSize="25" Height="30" 
                        Width="30" 
                        Padding="0"/>
                <Button Content="{materialDesign:PackIcon Kind=ContentSave,Size=30}"
                        Command="{Binding BtnSaveCSVFile}"     
                        Margin="0,10,5,0" 
                        HorizontalAlignment="Right" 
                        FontSize="25" Height="30" Width="30" 
                        Padding="0"/>
            </StackPanel>
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Path=TestCaseCollection}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="{Binding IsExpanded, Converter={StaticResource ExpandButtonContentConverter}}" 
                                            Command="{Binding ToggleExpandCommand}" 
                                            CommandParameter="{Binding}" />
                                    <Label Content="{Binding ID}" FontSize="22" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22" FontWeight="Bold" />
                                </StackPanel>
                                <ItemsControl ItemsSource="{Binding Path=TestSteps}" Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                    <Label Grid.Column="0" Content="{Binding TestStepID}" VerticalAlignment="Center" />
                                                    <TextBlock Grid.Column="1" Text="{Binding StepAction}" TextWrapping="Wrap" VerticalAlignment="Center" />
                                                    <TextBlock Grid.Column="2" Text="{Binding StepExpected}" TextWrapping="Wrap" VerticalAlignment="Center" />
                                                <CheckBox Grid.Column="3" IsChecked="{Binding Path=CheckBoxClicked, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
