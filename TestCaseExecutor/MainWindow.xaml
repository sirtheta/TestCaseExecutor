<Window x:Class="TestCaseExecutor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TestCaseExecutor"
        xmlns:viewmodels="clr-namespace:TestCaseExecutor.ViewModels"
        xmlns:notifications="clr-namespace:Notifications.Wpf.Core.Controls;assembly=Notifications.Wpf.Core"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="TestCaseExecutor" Height="450" Width="800">
    <Grid>
        <!--defines the area where to show the totification toast-->
        <notifications:NotificationArea Panel.ZIndex="10" 
              MaxItems="3"
              x:Name="WindowArea"
              Position="BottomRight" Margin="0,0,1,1">
        </notifications:NotificationArea>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"></ColumnDefinition>
                <ColumnDefinition Width="17*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <Button Content="{materialDesign:PackIcon Kind=OpenInApp,Size=30}"    
                        Command="{Binding BtnLoadCSVFile}" 
                        Margin="0,10,5,0" 
                        HorizontalAlignment="Right" 
                        FontSize="25" Height="30" 
                        Width="30" 
                        Padding="0"/>
                <Button Content="{materialDesign:PackIcon Kind=ContentSave,Size=30}"
                        Command="{Binding BtnSaveCSVFile}"     
                        Margin="0,10,5,0" 
                        HorizontalAlignment="Right" 
                        FontSize="25" Height="30" Width="30" 
                        Padding="0"/>
            </StackPanel>
            <!--<StackPanel>
                <Label Content="Test" />
                <Label Content="Test" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="T" Margin="10,0,0,0" />
                    <TextBlock Text="T" Margin="10,0,0,0" TextWrapping="Wrap" Width="250" VerticalAlignment="Center"/>
                    <TextBlock Text="T" Margin="10,0,0,0" TextWrapping="Wrap" Width="250" VerticalAlignment="Center"/>
                    <CheckBox IsChecked="{Binding Path=CheckBoxClicked, UpdateSourceTrigger=PropertyChanged}" Name="Test"/>
                </StackPanel>
            </StackPanel>-->

            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Path=TestCaseCollection}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Label Content="{Binding ID}" />
                                <Label Content="{Binding Title}" />
                                <ItemsControl ItemsSource="{Binding Path=TestSteps}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <Label Content="{Binding TestStepID}" Margin="10,0,0,0" />
                                                <TextBlock Text="{Binding StepAction}" Margin="10,0,0,0"   TextWrapping="Wrap" Width="250" VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding StepExpected}" Margin="10,0,0,0" TextWrapping="Wrap" Width="250" VerticalAlignment="Center"/>
                                                <CheckBox IsChecked="{Binding Path=CheckBoxClicked, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
